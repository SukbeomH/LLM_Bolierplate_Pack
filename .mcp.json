{
  "mcpServers": {
    "graph-code": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@er77/code-graph-rag-mcp", "."],
      "env": {
        "MCP_TIMEOUT": "80000",
        "NODE_OPTIONS": "--max-old-space-size=4096"
      }
    },
    "memory": {
      "type": "stdio",
      "command": "memory",
      "args": ["server"],
      "env": {
        "MCP_MEMORY_SQLITE_PATH": "/Users/sukbeom/Desktop/workspace/boilerplate/.agent/data/memory-service/memories.db",
        "MCP_MEMORY_SQLITE_PRAGMAS": "busy_timeout=15000,cache_size=20000"
      }
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    }
  },
  "enable_tool_search": true
}
