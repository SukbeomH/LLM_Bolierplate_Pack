# 줄바꿈 문자 통일: LF
# 모든 텍스트 파일에 대해 LF 사용
* text=auto eol=lf

# 바이너리 파일 명시적 선언
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.gz binary
*.bz2 binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.pyc binary
*.pyo binary
*.pyd binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# 특정 파일 형식에 대한 명시적 텍스트 처리
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.py text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.jsonc text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.svelte text eol=lf
*.vue text eol=lf
*.txt text eol=lf
*.env text eol=lf
*.env.* text eol=lf
*.config.* text eol=lf
*.conf text eol=lf
*.log text eol=lf
*.cjs text eol=lf
*.mjs text eol=lf

# Git 관련 파일
.gitattributes text eol=lf
.gitignore text eol=lf
.gitconfig text eol=lf
.editorconfig text eol=lf

# 문서 파일
*.rst text eol=lf
*.adoc text eol=lf

# 설정 파일
*.editorconfig text eol=lf
*.prettierrc text eol=lf
*.prettierignore text eol=lf
*.eslintrc* text eol=lf
*.eslintignore text eol=lf
*.prettierignore text eol=lf
tsconfig*.json text eol=lf
package*.json text eol=lf
*.lock text eol=lf

# 기타 텍스트 파일
LICENSE* text eol=lf
CHANGELOG* text eol=lf
README* text eol=lf
*.md text eol=lf
*.mkd text eol=lf
*.markdown text eol=lf

