{
  "server_name": "local-mcp",
  "version": "1.3.0",
  "description": "Local MCP Server (CodeGraph + Memory)",
  "repository": "https://github.com/Jakedismo/codegraph-rust",
  "capabilities": {
    "tools": {
      "codegraph": [
        "agentic_impact",
        "agentic_architecture",
        "codegraph_search",
        "codegraph_index"
      ],
      "memory": [
        "memory_store",
        "memory_find",
        "memory_list_categories"
      ]
    },
    "resources": []
  },
  "mcp_config": {
    "local_python": {
      "command": "uv",
      "args": ["run", "python", "mcp/server.py"],
      "transport": "stdio"
    },
    "codegraph_rust": {
      "command": "codegraph",
      "args": ["start", "stdio", "--watch"],
      "transport": "stdio"
    }
  },
  "memory": {
    "file": ".agent/memory.jsonl",
    "categories": ["convention", "decision", "pattern", "issue", "general"]
  },
  "fallback": {
    "enabled": true,
    "message": "Some tools require codegraph-rust CLI. Install from: https://github.com/Jakedismo/codegraph-rust"
  }
}
