{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Visual Verifier Skill Schema",
  "description": "웹 프로젝트 시각적 검증 스킬의 입력/출력 인터페이스 정의",
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "description": "스킬 입력 파라미터",
      "properties": {
        "port": {
          "type": "integer",
          "description": "개발 서버 포트 번호 (선택적, 기본값: 3000)",
          "default": 3000,
          "minimum": 1,
          "maximum": 65535
        }
      },
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "description": "스킬 출력 결과",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "검증 실행 시각 (ISO 8601 형식)"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "검증할 URL"
        },
        "port": {
          "type": "integer",
          "description": "사용된 포트 번호"
        },
        "verificationSteps": {
          "type": "array",
          "description": "Chrome DevTools MCP 검증 단계 목록",
          "items": {
            "type": "object",
            "properties": {
              "step": {
                "type": "integer",
                "description": "단계 번호",
                "minimum": 1
              },
              "action": {
                "type": "string",
                "description": "액션 이름"
              },
              "mcpTool": {
                "type": "string",
                "description": "사용할 MCP 도구 이름"
              },
              "description": {
                "type": "string",
                "description": "단계 설명"
              }
            },
            "required": ["step", "action", "mcpTool", "description"],
            "additionalProperties": false
          }
        },
        "checks": {
          "type": "object",
          "description": "검증 항목 및 기준",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["high", "medium", "low"]
              }
            },
            "required": ["description", "severity"],
            "additionalProperties": false
          }
        },
        "results": {
          "type": "object",
          "description": "검증 결과 (MCP 도구 실행 후 채워짐)",
          "additionalProperties": true
        },
        "recommendations": {
          "type": "array",
          "description": "권장사항 목록",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["high", "medium", "low"]
              }
            },
            "required": ["type", "message", "severity"],
            "additionalProperties": false
          }
        }
      },
      "required": ["timestamp", "url", "verificationSteps", "checks"],
      "additionalProperties": false
    }
  }
}

