{
  "$schema": "https://raw.githubusercontent.com/anthropics/model-context-protocol/main/schema/mcp.schema.json",
  "servers": {
    "serena": {
      "type": "stdio",
      "command": "docker",
      "args": ["exec", "-i", "mcp-serena", "uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "ide-assistant", "--mode", "interactive"],
      "description": "Symbol-based code search and editing"
    },
    "codanna": {
      "type": "stdio",
      "command": "docker",
      "args": ["exec", "-i", "mcp-codanna", "uvx", "--from", "git+https://github.com/code-yeongyu/codanna", "codanna", "start-mcp-server"],
      "description": "Semantic code search and analysis"
    },
    "shrimp": {
      "type": "stdio",
      "command": "docker",
      "args": ["exec", "-i", "mcp-shrimp", "npx", "@cyanheads/shrimp-task-manager"],
      "description": "Structured task management"
    }
  }
}
